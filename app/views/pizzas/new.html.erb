<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %><br>
    <% end %>
<% end %>
<%= form_for @pizza do |f| %>
    Name: <%= f.text_field :name %>
    Ingredient: <%= f.text_field :ingredients %>
    Restaurant: <%= f.collection_select :restaurant_ids, Restaurant.all, :id, :name %>
    <%= f.submit %>
<% end %> 